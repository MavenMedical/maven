sudo yum update -y
sudo yum install elinks screen git emacs kernel-headers fuse-libs fuse-devel fuse lvm2 wireshark nc tcptrack iotop iptraf iftop psacct pam-devel -y

sudo useradd logaccess -G adm
sudo sed -i -e 's/^create$/create 640 root adm/' /etc/logrotate.conf

sudo chgrp -R adm /var/log
sudo chmod -R g+r /var/log

wget http://yum.postgresql.org/9.3/redhat/rhel-6-x86_64/pgdg-centos93-9.3-1.noarch.rpm
sudo yum install pgdg-centos93-9.3-1.noarch.rpm -y

