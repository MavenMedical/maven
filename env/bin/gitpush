#!/bin/bash

cd ${MAVEN_ROOT}
python unit_tests.py
if [ $? -eq 0 ]; then
   git push
else
   echo -e "\e[00;31mUnit tests failed\e[0m"
   read -p ' Do you want to override and commit anyway (y/n)? ' -n 1 -r
   echo 
   if [[ $REPLY =~ ^[Yy]$ ]]; then
      git push
   else
      echo -e "\e[00;31mNo files were pushed\e[0m"
   fi
   
fi
